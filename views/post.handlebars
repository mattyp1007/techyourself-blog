<section class="container">
  <div class="row px-1 py-4 mb-3 bg-light">
    <section class="col-md-6 flex-col align-center ">
      <div class="flex-row justify-between align-center">
        <div class="row">
          <h1 class="text-center">{{title}}</h1>
        </div>
        <h4 class="row text-secondary">{{user.username}}</h5>
      </div>
      <p class="row">{{body}}</p>
    </section>
  </div>
  <section class="col-md-5">
    <h4 class="row border-bottom border-dark border-3 mb-4">Comments</h4>
    {{#each comments as |comment|}}
    <div class="card row">
      <div class="card-body">
        <h5 class="card-title text-muted">{{comment.user.username}}</h5>
        <h6 class="card-subtitle text-muted">on {{format_date comment.created_at}} at {{format_time comment.created_at}}</h6>
        <p class="card-text">{{comment.body}}</p>
      </div>
    </div>
    {{/each}}
    <form class="comment-form form mt-2 row">
      <div class="form-group row">
        <label for="comment">Comment on this post:</label>
        <textarea class="form-control" id="comment" rows="2"></textarea>
      </div>
      <div class="form-group row">
        <button class="btn btn-primary submit-btn" type="submit" data-blogid="{{id}}">Submit</button>
      </div>
    </form>
  </section>
</section>

<script src="/js/comment.js"></script>